<?xml version="1.0"?>
<robot name="my_ackermann_robot">
  <link name="base_link"></link>
  <link name="laser_frame"></link>
  <link name="imu_link"></link>
  
  <!-- ADD THIS NEW LINK for the NAVIC/GPS antenna -->
  <link name="gps_link"></link>
  
  <joint name="laser_joint" type="fixed">
    <parent link="base_link"/>
    <child link="laser_frame"/>
    <origin xyz="0.2 0.0 0.15" rpy="0 0 0"/> <!-- Your measured laser offset -->
  </joint>
  
  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0.05 0.0 0.05" rpy="0 0 0"/> <!-- Your measured IMU offset -->
  </joint>
  
  <!-- ADD THIS NEW JOINT to connect the GPS antenna -->
  <joint name="gps_joint" type="fixed">
    <parent link="base_link"/>
    <child link="gps_link"/>
    <!-- IMPORTANT: Measure the XYZ offset of your NAVIC antenna from the rear axle -->
    <origin xyz="0.1 0.0 0.2" rpy="0 0 0"/> 
  </joint>
</robot>